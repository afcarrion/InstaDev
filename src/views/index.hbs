<div class="card">
    <div class="card-header bg-light">
        <h3 class="card-title">
            <i class="far fa-image"> Upload Image</i>
        </h3>
    </div>
    <div class="card-body">
        <form action="/images" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroup"
                            aria-describedby="inputGroupFileAddon" required>
                        <label class="custom-file-label" for="inputGroup">Choose Image</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="text" name="title" class="form-control" placeholder="Title" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="description" id="description" rows="4"
                    placeholder="Description" required></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary"><i class="fa fa-upload"></i> Upload</button>
            </div>
        </form>
    </div>
</div>

<div class="card">
    <div class="card-header bg-light">
        <h3><i class="far fa-images"></i> Recent Images</h3>
    </div>
    <div class="card-body">
        <div class="row">
            {{#each images}}
            <div class="col-md-4 text-center pb-4 b-0 m-0">
                <div class="card-body w-100 h-100 ">
                    <a href="/images/{{uniqueId}}">
                        <img src="/public/upload/{{filename}}" class="w-100 h-100 img-thumbnail">
                    </a>
                    <div class="card-footer d-flex  justify-content-around align-items-center p-1 b-0 m-0">
                            <i class="fas fa-heart"></i>{{likes}}
                            <i class="fas fa-eye"></i> {{views}}
                    </div>
                </div>
            </div>
            
            {{/each}}
        </div>
    </div>
</div>