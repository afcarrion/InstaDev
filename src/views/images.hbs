<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i> Delete
        </button>
    </div>
    <div class="card-body">
        <p>{{image.description}}</p>
        <div class="text-center">
            <img src="/public/upload/{{image.filename}}" alt="Image" class="img-fluid">
        </div>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
            <i class="fas fa-thumbs-up"></i> Like
        </button>
        <p>
            <i class="fas fa-heart"></i>
            <span class="likes-count">{{image.likes}}</span>
        </p>
        <p>
            <i class="fas fa-eye"></i> {{image.views}}
        </p>
        <p>
            <i class="far fa-clock"></i> {{tiempoAtras image.timestamp}}
        </p>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
            <i class="fa fa-comment-o"></i> Post a Comment
        </button>
    </div>
    <div class="card-body">
        <blockquote id="formComment">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="email@instadev.com">
                </div>
                <div class="form-group">
                    <textarea name="comment" id="comment" rows="2" class="form-control" placeholder="Comment ... "></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Comment
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-3">
            {{#each comments}}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-md-2 text-center">
                            <img src="http://gravatar.com/avatar/{{gravatar}}?d=wavatar&s=45" alt="profile" class="w-50 img-thumbnail">
                        </div>
                        <blockquote class="col-md-10">
                            <p class="lead">{{comment}}</p>
                            <footer class="blockquote-footer">
                                {{name}} - {{tiempoAtras timestamp}}
                            </footer>
                        </blockquote>
                    </div>
                </li>
            {{/each}}
        </ul>
    </div>
</div>